[${DB_HOST}]
active = true
description =  "PostgreSQL Database (Streaming-Only)"
conninfo = host=${DB_HOST} user=${DB_SUPERUSER} dbname=${DB_SUPERUSER_DATABASE} port=${DB_PORT} password=${DB_SUPERUSER_PASSWORD}
streaming_conninfo = host=${DB_HOST} user=${DB_REPLICATION_USER} port=${DB_PORT} password=${DB_REPLICATION_PASSWORD}
backup_method = ${DB_BACKUP_METHOD}
streaming_archiver = on
slot_name = ${DB_SLOT_NAME}
